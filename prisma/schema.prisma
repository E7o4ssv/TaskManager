generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id         String    @id @default(cuid())
  login      String?   @unique  // основной вход; при регистрации без email
  email      String?   @unique  // опционально
  password   String
  name       String
  role       String    @default("member") // admin | member (права доступа)
  positionId String?
  position   Position? @relation(fields: [positionId], references: [id], onDelete: SetNull)
  createdAt  DateTime  @default(now())
  messages   Message[]
  files      File[]
  tasks      Task[]    @relation("Assignee")
  createdTasks Task[]  @relation("Creator")
  participants Participant[]
  projectMemberships ProjectMember[]
  managedProjects    Project[]  @relation("ProjectManager")
  confirmedTasks     Task[]     @relation("TaskConfirmedBy")
}

model Position {
  id    String  @id @default(cuid())
  name  String  @unique // Разработчик, Дизайнер, Тестировщик и т.д.
  users User[]
}

model Conversation {
  id        String   @id @default(cuid())
  type      String   // "group" | "direct" | "project"
  name      String?
  projectId String?  @unique
  project   Project? @relation(fields: [projectId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  messages  Message[]
  participants Participant[]
}

model Participant {
  id             String   @id @default(cuid())
  conversationId String
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  userId         String
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  joinedAt       DateTime @default(now())
  @@unique([conversationId, userId])
}

model Message {
  id             String   @id @default(cuid())
  content        String
  conversationId String?
  conversation   Conversation? @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  userId         String
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt      DateTime @default(now())
}

model File {
  id        String   @id @default(cuid())
  name      String
  path      String
  size      Int
  mimeType  String
  projectId String?
  project   Project? @relation(fields: [projectId], references: [id], onDelete: Cascade)
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  tasksAsDocument Task[]
}

model Project {
  id          String   @id @default(cuid())
  name        String
  description String?
  managerId   String?  // кто создал или кому передали роль; null = назначить при первом доступе
  manager     User?    @relation("ProjectManager", fields: [managerId], references: [id], onDelete: SetNull)
  createdAt   DateTime @default(now())
  tasks       Task[]
  files       File[]
  members     ProjectMember[]
  invitations Invitation[]
  projectChat Conversation? // один чат на проект
}

model Invitation {
  id        String    @id @default(cuid())
  projectId String
  project   Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)
  token     String    @unique
  expiresAt DateTime
  usedAt    DateTime?
  createdAt DateTime  @default(now())
}

model ProjectMember {
  id        String   @id @default(cuid())
  projectId String
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  joinedAt  DateTime @default(now())
  @@unique([projectId, userId])
}

model Task {
  id            String    @id @default(cuid())
  title         String
  description   String?
  status        String    @default("todo") // todo | in_progress | review | done
  priority      String    @default("medium")
  dueDate       DateTime?
  projectId     String?
  project       Project?  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  documentId    String?
  document      File?     @relation(fields: [documentId], references: [id], onDelete: SetNull)
  assigneeId    String?
  assignee      User?     @relation("Assignee", fields: [assigneeId], references: [id], onDelete: SetNull)
  acceptedAt    DateTime? // когда исполнитель принял делегированную задачу
  creatorId     String
  creator       User      @relation("Creator", fields: [creatorId], references: [id], onDelete: Cascade)
  confirmedById String?
  confirmedBy   User?     @relation("TaskConfirmedBy", fields: [confirmedById], references: [id], onDelete: SetNull)
  confirmedAt   DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}
